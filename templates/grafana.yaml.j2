version: "3"

networks:
  prometeus:
    name: prometeus

services:
  grafana:
    container_name: grafana
    image: grafana/grafana:latest
    restart: unless-stopped
    user: "0"
    ports:
      - "3030:3000"
    env_file:
      - ./grafana_config
    volumes:
      # /!\ To be modified depending on your needs /!\
      - ./data:/var/lib/grafana
      - ./provisioning:/etc/grafana/provisioning
    networks:
      - prometeus
